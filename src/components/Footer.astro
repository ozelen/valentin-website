---
import { PERSONAL_INFO, SITE_TITLE } from '../consts';
---

<footer class="border-t border-gray-200 bg-gray-50">
	<div class="container-custom py-12">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<div>
				<h3 class="text-lg font-semibold text-gray-900 mb-4">{SITE_TITLE}</h3>
				<p class="text-sm text-gray-600 mb-4">{PERSONAL_INFO.title}</p>
				<p class="text-sm text-gray-600">{PERSONAL_INFO.affiliation}</p>
			</div>
			
			<div>
				<h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Links</h3>
				<ul class="space-y-2 text-sm">
					<li><a href="/cv" class="text-gray-600 hover:text-primary-600">CV (PDF)</a></li>
					<li><a href={PERSONAL_INFO.googleScholar} target="_blank" rel="noopener" class="text-gray-600 hover:text-primary-600">Google Scholar</a></li>
					<li><a href={PERSONAL_INFO.uqProfile} target="_blank" rel="noopener" class="text-gray-600 hover:text-primary-600">UQ Profile</a></li>
					<li><a href="/contact" class="text-gray-600 hover:text-primary-600">Contact</a></li>
				</ul>
			</div>
			
			<div>
				<h3 class="text-lg font-semibold text-gray-900 mb-4">Contact</h3>
				<ul class="space-y-2 text-sm text-gray-600">
					<li><a href={`mailto:${PERSONAL_INFO.email}`} class="hover:text-primary-600">{PERSONAL_INFO.email}</a></li>
					<li>{PERSONAL_INFO.phone}</li>
					<li class="text-xs">{PERSONAL_INFO.office}</li>
				</ul>
			</div>
		</div>
		
		<div class="mt-8 pt-8 border-t border-gray-200 text-center text-sm text-gray-500">
			<p>&copy; {new Date().getFullYear()} {SITE_TITLE}. All rights reserved.</p>
		</div>
	</div>
</footer>
